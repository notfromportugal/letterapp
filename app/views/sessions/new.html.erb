<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/ ">
        <img alt="Home" id="logo" src="http://www.iconhot.com/icon/png/devine-icons-part-2/256/mail-2-w.png">
      </a>
      <p class="navbar-text navbar-right">
        <% if current_user  %>You are signed in as <%= current_user.email %></p> 
        <% else %>You are not signed in<% end %>
      </p>
      
      <div class="btn btn-default" id="login">
        <% if current_user  %>
          <%= link_to "Logout", destroy_session_path %>
        <% else %>
          <%= link_to "Register", new_user_path %>
        <% end %>
      </div>
    
    </div>
  </div>
</nav>

<h1 class="jumbotron">Please Log In</h1>

<% flash.each do |key, value| %>
    <div class="alert <%= key %>"><%= value %></div>
<% end %>

<%= form_for @user, url: create_session_path do |f| %>

    <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "Log In", class: "btn btn-primary" %>

<% end %>